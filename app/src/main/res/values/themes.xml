<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinkenUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
    <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highblue</item>
        <item name="colorSecondaryVariant">@color/lowblue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/lightgray</item>
        <item name="colorOnSurface">@color/gray2</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.LinkenUp.ToolBar">
        <item name="android:background">@color/darkgray</item>
        <item name="titleTextColor">?colorOnPrimary</item>
    </style>
    <style name="Theme.LinkenUp.Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="background">@drawable/shape_divider</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>
    <style name="Theme.LinkenUp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_day</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.LinkenUp.SplashBoot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_night</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

</resources>