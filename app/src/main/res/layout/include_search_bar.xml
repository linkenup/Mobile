<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <EditText
        android:tag="searchedittag"
        android:id="@+id/search_edit"
        style="@style/Field.Edit"
        android:layout_marginStart="@dimen/search_marginHorizontal"
        android:layout_marginEnd="@dimen/search_marginHorizontal"
        android:layout_height="@dimen/search_height"
        android:layout_width="match_parent"
        android:hint="@string/search"/>

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="@dimen/search_button_width"
        android:layout_height="@dimen/search_height"
        android:layout_marginStart="@dimen/search_button_marginLeft"
        android:background="@drawable/shape_search_button"
        android:onClick="onSearch"
        android:src="@drawable/ic_search_36" />
</LinearLayout>