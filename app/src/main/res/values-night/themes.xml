<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinkenUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray2</item>
        <item name="colorOnPrimary">@color/simplegray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lowblue</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/lightgray2</item>
        <item name="colorOnSurface">@color/gray2</item>
        <!-- Status bar color. -->
        <item name="colorAccent">@color/purple</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="materialButtonStyle">@style/Theme.LinkenUp.Button</item>
    </style>
    <style name="Theme.LinkenUp.Button"  parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>
    <style name="Theme.LinkenUp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_night</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>
    <style name="Theme.LinkenUp.ToolBar" >
        <item name="android:background">@color/darkgray</item>
        <item name="titleTextColor">?colorOnPrimary</item>
    </style>
</resources>